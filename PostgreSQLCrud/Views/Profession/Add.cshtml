@model ProfessionEntity
@{
    ViewData["Title"] = "Add";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Add Profession</h2>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-5">
                <label asp-for="Profession" class="control-label"></label>
                <input type="text" asp-for="Profession" class="form-control" />
                <span asp-validation-for="Profession" class="text-danger"></span>
                <input asp-for="initialProfession" type="hidden" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-5">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger col-md-5" role="alert">
                    @ViewBag.Message
                </div>
            }
        </div>
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <input type="submit" value="Save" class="btn btn-outline-success" /> &nbsp;
                    @Html.ActionLink("Show List", "Index", "Profession", "", new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        </div>
    </div>

}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}