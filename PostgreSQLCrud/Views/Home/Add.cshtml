@model ContactEntity
@{
    ViewData["Title"] = "Add";
}

@using (Html.BeginForm("Add", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h2>Add Contact</h2>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <partial name="_ContactPartialView" />

        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <img src="~/Upload/blank.jpg" id="imagePreview" alt="Show Image" class="rounded-2" style="width:84px;height:84px;">
                    <input type="file" id="Image" name="Image" onchange="return fileValidation()" />
                </div>
                <div class="col-sm-2"></div>
                <div class="col-sm-offset-2 col-sm-3">
                    <br />
                    <br />
                    <br />
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                    @Html.ActionLink("Show List", "Index", "Home", "", new { @class = "btn btn-outline-dark" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger col-md-5" role="alert">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>

}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
